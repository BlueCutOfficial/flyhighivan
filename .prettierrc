{
	"useTabs": true,
	"singleQuote": true,
	"trailingComma": "all",
	"plugins": ["prettier-plugin-svelte"],
	"overrides": [
		{ "files": "**/*.svelte", "options": { "parser": "svelte" } },
		{ "files": "**/*.ts", "options": { "parser": "typescript" } },
		{ "files": ["pnpm-lock.yaml"], "options": { "requirePragma": true } }
	]
}
